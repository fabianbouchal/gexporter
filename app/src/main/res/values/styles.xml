<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="colorBackground">@color/colorBackground</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="android:itemBackground">@color/colorBackground</item>

        <item name="colorText">@color/textColor</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:editTextColor">@color/textColor</item>

        <item name="android:checkboxStyle">@style/AppCheckbox</item>
    </style>

    <style name="AppThemeDark" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary_dark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_dark</item>
        <item name="colorAccent">@color/colorAccent_dark</item>

        <item name="colorBackground">@color/colorBackground_dark</item>
        <item name="android:colorBackground">@color/colorBackground_dark</item>
        <item name="android:itemBackground">@color/colorBackground_dark</item>

        <item name="colorText">@color/textColor_dark</item>
        <item name="android:textColor">@color/textColor_dark</item>
        <item name="android:editTextColor">@color/textColor_dark</item>

        <item name="android:checkboxStyle">@style/AppCheckboxDark</item>
    </style>

    <style name="AppCheckbox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="AppCheckboxDark" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:textColor">@color/textColor_dark</item>
    </style>

</resources>
